<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout style="@style/WrapContent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:padding="@dimen/small_padding">

    <TextView
        android:id="@+id/txt_transaction_name"
        style="@style/Title"
        android:layout_width="wrap_content"
        android:maxWidth="280dp"
        tools:text="Name"/>

    <TextView
        android:id="@+id/txt_transaction_date"
        style="@style/WrapContent"
        android:layout_below="@id/txt_transaction_name"
        tools:text="Date"/>

    <TextView
        android:id="@+id/txt_transaction_category"
        style="@style/WrapContent"
        android:layout_below="@id/txt_transaction_date"
        tools:text="Category"/>

    <TextView
        android:id="@+id/txt_transaction_amount"
        style="@style/WrapContent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_below="@id/txt_transaction_name"
        android:maxWidth="60dp"
        tools:text="â‚¹ Amount"/>

</RelativeLayout>