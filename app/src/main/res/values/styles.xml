<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MoneyBoxTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/document_manager_primary</item>
    <item name="colorPrimaryDark">@color/document_manager_primary_dark</item>
    <item name="colorAccent">@color/document_manager_primary</item>

    <item name="actionMenuTextColor">@color/primary_text_87alpha</item>
    <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="green_expense_details">
        //hint color And Label Color in False State
        <item name="android:textColorHint">@color/green</item>
        <item name="android:textSize">15sp</item>

        //Label color in True State And Bar Color False And True State
        <item name="colorAccent">@color/secondary_text_55alpha</item>
        <item name="colorControlActivated">@color/theme_green_expense</item>
        <item name="colorControlNormal">@color/secondary_text_55alpha</item>
    </style>
</resources>
